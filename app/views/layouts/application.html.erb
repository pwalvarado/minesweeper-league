<!DOCTYPE html>
<html>
<head>
  <title>MinesweeperLeague</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//js.pusher.com/2.2/pusher.min.js"></script>
  <%= javascript_tag "window.pusherKey = '" + Pusher.key + "'" %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/#">
          <img alt="Brand" src="<%= asset_path('MSL-logo.png') %>"/>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/#">Single Player</a></li>
          <li><a href="/#two_player_games/new">Competitive</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to "Profile Page", user_url(current_user) %></li>
            <li><%= link_to "Sign Out", session_url, method: :delete %></li>
          <% else %>
            <li><%= link_to "Log In", new_session_url %></li>
            <li><%= link_to "Sign Up", new_user_url %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <% if flash[:errors] %>
    <div class="flash-container container">
      <div class="flash-row row">
        <div class="flash-col col-md-12">
          <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
            <strong>Uh Oh!</strong>
            <%= flash[:errors].join('<br>').html_safe if flash[:errors] %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
